{% extends 'base.html.twig' %}

{% block navbar_brand -%}
    Formation
{%- endblock %}

{% block content %}
    {% if formations is defined %}
        <div class='cd-timeline js-cd-timeline'>
            <div class="cd-timeline__container">
                {% for formation in formations %}
                    <div class='cd-timeline__block js-cd-block'>
                        <div class='cd-timeline__img cd-timeline__img--picture js-cd-img'>
                            <img src='{{ formation.school.logo }}'/>
                        </div>
                        <div class='cd-timeline__content js-cd-content'>
                            <h2 class='mb-4'>{{ formation.degree }}</h2>
                            <a href='{{ formation.url }}' target=_blank class='cd-timeline__read-more'>
                                <i class='fa fa-link'></i>
                            </a>
                            <span class='cd-timeline__date'>{{ formation.to | date('M y') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}