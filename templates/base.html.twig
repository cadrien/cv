                        <div class='list-group ma0'>
                            <div class='list-group-item text-overflow'><i class='fa fa-phone'></i> +33 (0)6.51.45.41.33
                            </div>
                            <a href='mailto:adrien.chaumarat@gmail.com' target=_blank
                               class='list-group-item text-overflow'><i class='fa fa-envelope'></i>
                                adrien.chaumarat@gmail.com</a>
                            <a href='' class='list-group-item text-overflow'><i class='fa fa-map-marker'></i> 43 Av
                                Paris, REIMS</a>
                            <div class='list-group-item text-overflow'><i class='fa fa-info-circle'></i> Né le 10
                                janvier 1989
                            </div>
                        </div>
                    </div>
                </div>
                <div class='card card-default'>
                    <div class='card-heading'>Réseaux</div>
                    <div class='card-body pa0'>
                        <div class='list-group ma0'>
                            <a href='https://fr.linkedin.com/in/adrienchaumarat' target=_blank
                               class='list-group-item text-overflow'><i class='fa fa-linkedin'></i> LinkedIn</a>
                            <a href='https://fr.viadeo.com/fr/profile/adrien.chaumarat' target=_blank
                               class='list-group-item text-overflow'><i class='fa fa-viadeo'></i> Viadeo</a>
                        </div>
                    </div>
                </div>
                <div class='card card-default'>
                    <div class='card-heading'>Contact</div>
                    <div class='card-body pa0'>
                        <div class='list-group ma0'>
                            <button data-toggle='modal' class='list-group-item text-overflow'><i
                                        class='fa fa-arrow-circle-right'></i> Me contacter
                            </button>
                            <a href='' class='list-group-item text-overflow'><i class='fa fa-arrow-circle-right'></i>
                                Télécharger le CV</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class='col-sm-9'>
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    {% block js_end %}{% endblock %}
    </body>
</html>